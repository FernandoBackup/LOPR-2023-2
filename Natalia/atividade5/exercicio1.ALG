Algoritmo "exercicio1"

Var
   numero: inteiro
Inicio
   escreval("Insira um número")
   leia(numero)

   se numero > 0 entao
      escreval("Seu número é positivo!")
   senao
      se numero = 0 entao
         escreval("Seu número é nulo!")
      senao
         escreval("Seu número é negativo!")
      fimse
   fimse



Fimalgoritmo