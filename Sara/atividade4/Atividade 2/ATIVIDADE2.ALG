Algoritmo "Atividade2"

Var
   numero, antecessor, sucessor: inteiro

Inicio
      escreva("Digite um numero: ")
      leia(numero)
      antecessor <- numero - 1
      sucessor <- numero + 1
      escreva("O número informado foi ",numero)
      escreva(", seu antecessor é ", antecessor, " e o seu secessor é ",sucessor, ".")

Fimalgoritmo