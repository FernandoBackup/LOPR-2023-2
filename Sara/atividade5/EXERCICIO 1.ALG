Algoritmo "exercicio 1"

Var
   numero: inteiro

Inicio
      escreva("Digite um número: ")
      leia (numero)

      se numero > 0 entao
         escreva("Este número é postivo!")
      senao
           se numero = 0 entao
              escreva("Este numero é nulo!")
           senao
                escreva("Este numero é negativo!")
           fimse
      fimse
Fimalgoritmo