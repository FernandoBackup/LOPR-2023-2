algoritmo "Nome do Programa"

var
    integer_number: inteiro
    increment: inteiro
    i: inteiro
inicio

    escreval("Enter a integer number:")
    leia(integer_number)
    escreval("Enter a number of increment:")
    leia(increment)

    para i de 0 ate integer_number passo increment faca
        escreval(i)
    fimpara 

fimalgoritmo